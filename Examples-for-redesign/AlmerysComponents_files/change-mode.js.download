// dark mode ---------------//
const toggleSwitch = document.querySelector('.theme-switch input[type="checkbox"]');
const currentTheme = localStorage.getItem('theme');

if (currentTheme) {
    document.documentElement.setAttribute('data-theme', currentTheme);
  
    if (currentTheme === 'dark') {
        toggleSwitch.checked = true;
    }
}

function switchTheme(e) {
    if (e.target.checked) {
        document.documentElement.setAttribute('data-theme', 'dark');
        localStorage.setItem('theme', 'dark');
    }
    else {        
        document.documentElement.setAttribute('data-theme', 'light');
        localStorage.setItem('theme', 'light');
    }
}

toggleSwitch.addEventListener('change', switchTheme, false);

// sidebar state ---------------//

const body = $('body');
const btnSidebarState = $('.btn-sidebar');
const sidebarState = localStorage.getItem('sidebarState');
const bodyCloseClass = 'sidebar-close';
const closeClass = 'close';
const closedStatus = 'closed';
const openedStatus = 'opened';

if (sidebarState) {
    if (sidebarState === closedStatus) {
        body.addClass(bodyCloseClass);
        btnSidebarState.addClass(closeClass);
    } else {
        body.removeClass(bodyCloseClass);
        btnSidebarState.removeClass(closeClass);
    }
}

function changeSidebarState() {
    if (!btnSidebarState.hasClass(closeClass)) {
        localStorage.setItem('sidebarState', closedStatus);
    } else {
        localStorage.setItem('sidebarState', openedStatus);
    }
}

btnSidebarState.click(changeSidebarState);

